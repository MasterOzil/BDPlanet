/**index.wxss**/
.slide-image {
  width: 100%;
}

.section {
  margin-top: 20px;
}

.picker {
  display: block;
  border: 2px solid #000;
  margin: 10px 40rpx;
  padding-left: 20rpx;
  padding-right: 100rpx;
  font-size: 14px;
  height: 36px;
  line-height: 36px;
  position: relative;
}

.picker .fa {
  position: absolute;
  right: 14rpx;
  line-height: 36px;
  font-size: 24px;
}

.date-picker {
  margin-top: 20px;
  margin-bottom: 20px;
  display: flex;
  justify-content: center;
}

.date-opt {
  width: 100rpx;
  border-radius: 0;
  background-color: #fff;
  border: none;
  text-align: center;
  color: #999;
  padding-top: 10rpx;
  padding-bottom: 14rpx;
}

.date-opt-true {
  background-color: #ff6600;
  color: #fff;
}

.date-opt-false {
  background-color: #fff;
  color: #999;
}

.date-opt .date {
  font-size: 28px;
  font-family: miso;
}

.date-opt .week {
  font-size: 12px;
}

.club-picker {
  padding-left: 25rpx;
  padding-right: 25rpx;
  margin-top: 20px;
  margin-bottom: 20px;
  display: flex;
  justify-content: space-around;
}

.club-opt {
  border-radius: 0;
  background-color: #fff;
  border: none;
  position: relative;
  width: 340rpx;
  height: 340rpx;
}

.club-opt .club-cover {
  width: 100%;
  height: 100%;
}

.club-opt-true {
  position: relative;
}

.club-opt-true .club-name {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  bottom: 0;
  font-size: 48rpx;
  line-height: 340rpx;
  padding: 10rpx 20rpx;
  color: #fff;
  font-weight: bold;
  text-align: center;
  background-color: rgba(255,96,0,0.7);
  box-sizing: border-box;
}

.club-opt-false .club-name {
  width: 100%;
  height: auto;
  position: absolute;
  left: 0;
  bottom: 0;
  font-size: 14px;
  line-height: 200%;
  padding: 10rpx 20rpx;
  color: #fff;
  text-align: right;
  background-color: rgba(0,0,0,0.3);
  box-sizing: border-box;
}